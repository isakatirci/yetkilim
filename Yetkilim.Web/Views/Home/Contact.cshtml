@{
    ViewData["Title"] = "Contact";



}

<div style="margin: 15px 15px">
    <h1>İletişim</h1>
    <p>Sizlere daha iyi hizmet verebilmek için var gücümüzle çalışıyoruz. Bize aşağıdaki formdan 7/24 ulaşabilirsiniz.</p>
</div>
<div class="row">
    <form class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <input id="icon_prefix" type="text" class="validate">
                <label for="icon_prefix">Ad Soyad</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">phone</i>
                <input id="icon_telephone" type="tel" class="validate">
                <label for="icon_telephone">Telefon</label>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">mail</i>
                <input id="icon_email" type="email" class="validate">
                <label for="icon_email">Email</label>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">mode_edit</i>
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Mesajınız</label>
            </div>
            <button class="btn block waves-effect waves-light">GÖNDER  <i class="material-icons">send</i></button>
        </div>
    </form>
</div>

