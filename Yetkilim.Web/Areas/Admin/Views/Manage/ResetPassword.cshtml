@model Yetkilim.Web.Areas.Admin.Models.AdminUserResetPasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en-us">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="~/admin/assets/favicon.ico" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700italic,700,900,900italic" rel="stylesheet">
    <!-- STYLESHEETS -->
    <style type="text/css">

        [fuse-cloak],
        .fuse-cloak {
            display: none !important;
        }
    </style>
    <!-- Icons.css -->
    <link type="text/css" rel="stylesheet" href="~/admin/assets/icons/fuse-icon-font/style.css">
    <!-- Animate.css -->
    <link type="text/css" rel="stylesheet" href="~/admin/assets/lib/animate.css/animate.min.css">
    <!-- PNotify -->
    <link type="text/css" rel="stylesheet" href="~/admin/assets/lib/pnotify/dist/PNotifyBrightTheme.css">
    <!-- Nvd3 - D3 Charts -->
    <link type="text/css" rel="stylesheet" href="~/admin/assets/lib/nvd3/build/nv.d3.min.css" />
    <!-- Perfect Scrollbar -->
    <link type="text/css" rel="stylesheet" href="~/admin/assets/lib/perfect-scrollbar/css/perfect-scrollbar.css" />
    <!-- Fuse Html -->
    <link type="text/css" rel="stylesheet" href="~/admin/assets/fuse-html/fuse-html.min.css" />
    <!-- Select2 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <!-- Main CSS -->
    <link type="text/css" rel="stylesheet" href="~/admin/assets/css/main.css">
    <!-- / STYLESHEETS -->
    <!-- JAVASCRIPT -->
    <!-- jQuery -->
    <script type="text/javascript" src="~/admin/assets/lib/jquery/dist/jquery.min.js"></script>
    <!-- Mobile Detect -->
    <script type="text/javascript" src="~/admin/assets/lib/mobile-detect/mobile-detect.min.js"></script>
    <!-- Perfect Scrollbar -->
    <script type="text/javascript" src="~/admin/assets/lib/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
    <!-- Popper.js -->
    <script type="text/javascript" src="~/admin/assets/lib/popper.js/dist/umd/popper.min.js"></script>
    <!-- Bootstrap -->
    <script type="text/javascript" src="~/admin/assets/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Nvd3 - D3 Charts -->
    <script type="text/javascript" src="~/admin/assets/lib/d3/d3.min.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/nvd3/build/nv.d3.min.js"></script>
    <!-- Data tables -->
    <script type="text/javascript" src="~/admin/assets/lib/datatables.net/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/datatables-responsive/js/dataTables.responsive.js"></script>
    <!-- PNotify -->
    <script type="text/javascript" src="~/admin/assets/lib/pnotify/dist/iife/PNotify.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/pnotify/dist/iife/PNotifyStyleMaterial.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/pnotify/dist/iife/PNotifyButtons.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/pnotify/dist/iife/PNotifyCallbacks.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/pnotify/dist/iife/PNotifyMobile.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/pnotify/dist/iife/PNotifyHistory.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/pnotify/dist/iife/PNotifyDesktop.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/pnotify/dist/iife/PNotifyConfirm.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/pnotify/dist/iife/PNotifyReference.js"></script>
    <!-- Fuse Html -->
    <script type="text/javascript" src="~/admin/assets/fuse-html/fuse-html.min.js"></script>
    <!-- MomentJS-->
    <script type="text/javascript" src="~/admin/assets/lib/moment/min/moment.min.js"></script>
    <script type="text/javascript" src="~/admin/assets/lib/moment/min/locale-tr.js"></script>
    <script type="text/javascript">
        moment.locale('tr');
    </script>
    <!-- Select2 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <!-- Main JS -->
    <script type="text/javascript" src="~/admin/assets/js/main.js"></script>
    <!-- / JAVASCRIPT -->
</head>
<body class="layout layout-vertical layout-left-navigation layout-above-toolbar layout-above-footer">
    <main>
        <div id="wrapper">
            <div class="content-wrapper">
                <div class="content custom-scrollbar">
                    <div id="reset-password" class="p-8">

                        <div class="form-wrapper md-elevation-8 p-8">

                            <div class="logo bg-secondary">
                                <span>F</span>
                            </div>

                            <div class="title mt-4 mb-8">Şifrenizi değiştirin</div>
                            @if (string.IsNullOrWhiteSpace(Model.FormMessage) == false)
                            {
                                <div class="alert @(Model.IsSuccess ? "alert-success": "alert-danger") alert-dismissible fade show" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                    @Model.FormMessage
                                    @if (Model.IsSuccess)
                                    {
                                        <a class="alert-link" href="@Url.Action("Index")"> Giriş yapmak için tıklayın.</a>
                                    }
                                </div>
                            }
                            <form method="post" asp-action="ResetPassword" asp-controller="Manage" name="resetPasswordForm" novalidate="">
                                <input type="hidden" asp-for="Code" value="@Model.Code"/>
                                <div class="form-group mb-4">
                                    <input type="email" class="form-control" autocomplete="off" id="resetPasswordFormInputEmail" name="Email" aria-describedby="emailHelp" placeholder=" " value="@Model.Email" required/>
                                    <label for="resetPasswordFormInputEmail">E-Posta adresi</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <input type="password" autocomplete="new-password" class="form-control" id="registerFormInputPassword" name="Password" required />
                                    <label for="registerFormInputPassword">Şifre</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <input type="password" class="form-control" id="registerFormInputPasswordConfirm" name="PasswordRe" required />
                                    <label for="registerFormInputPasswordConfirm">Şifre (Tekrar)</label>
                                    <span asp-validation-for="PasswordRe" class="text-danger"></span>
                                </div>

                                <button type="submit" class="submit-button btn btn-block btn-secondary mt-8 mb-4 mx-auto" aria-label="ŞİFREMİ DEĞİŞTİR">
                                    ŞİFREMİ DEĞİŞTİR
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>